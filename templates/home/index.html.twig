{% extends 'base.html.twig' %}

{% block title %}Blabla 18-25{% endblock %}

{% block body %}

    <h1 class="mb-5"> Catégories de JVC </h1>

    <div class="accordion" id="accordionCategory">
    {% for category in categories %}
        <div class="accordion-item">
            <h2 class="accordion-header" id="heading{{ category.id }}">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ category.id }}"
                        aria-expanded="false" aria-controls="collapse{{ category.id }}">
                    {{ category.name }} <span class="ms-5 text-muted">{{ category.description }}</span>
                </button>
            </h2>
            <div id="collapse{{ category.id }}" class="accordion-collapse collapse hide" aria-labelledby="heading{{ category.id }}"
                 data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <div class="accordion" id="accordionSubCategory">
                    {% for subCategory in category.subCategories %}
                        <div>
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">{{ subCategory.name }}</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">{{ subCategory.description }}</h6>
                                    <p class="card-text">Nombre de threads : {{ subCategory.threads|length }}</p>
                                    <a href="{{ path('subCategory_index', {'category': subCategory.category.name, 'subCategory': subCategory.name }) }}" class="card-link">Voir détails</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% endblock %}
